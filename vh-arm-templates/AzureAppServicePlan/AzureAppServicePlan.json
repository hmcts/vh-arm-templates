{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appServicePlanName": {
      "type": "string",
      "metadata": {
        "description": "Base name of the resource such as web app name and app service plan "
      },
      "minLength": 2
    },
    "sku": {
      "type": "string",
      "defaultValue": "S1",
      "allowedValues": [
        "S1",
        "S2",
        "S3"
      ],
      "metadata": {
        "description": "The SKU of App Service Plan "
      }
    },
    "tier": {
      "type": "string",
      "defaultValue": "standard",
      "allowedValues": [
        "standard",
        "premium"
      ],
      "metadata": {
        "description": "The tier of App Service Plan "
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "KeyVaultCertificateSecretName": {
      "type": "string",
      "defaultValue": "KeyVaultCertificateSecretName",
      "metadata": {
        "description": "The secret name under the SSL Certificate is stored in the Key Vault"
      }
    },
    "certificateThumbprint": {
      "type": "string",
      "defaultValue": "KeyVaultCertificateSecretName",
      "metadata": {
        "description": "The secret name under the SSL Certificate is stored in the Key Vault"
      }
    }
  },
  "variables": {
    "keyVaultName": "[replace(parameters('appServicePlanName'),'-', '')]",
    "certificateName": "[parameters('KeyVaultCertificateSecretName')]"
  },
  "resources": [
    {
      "apiVersion": "2017-08-01",
      "type": "Microsoft.Web/serverfarms",
      "kind": "app",
      "name": "[parameters('appServicePlanName')]",
      "location": "[parameters('location')]",
      "comments": "This app service plan is used for the web app and slots.",
      "properties": {},
      "dependsOn": [],
      "tags": {
        "displayName": "App Service Plan"
      },
      "sku": {
        "name": "[parameters('sku')]",
        "tier": "[parameters('tier')]"
      }
    },
    {
      "condition": "[not(equals(parameters('KeyVaultCertificateSecretName'), 'KeyVaultCertificateSecretName'))]",
      "type": "Microsoft.Web/certificates",
      "name": "[variables('certificateName')]",
      "apiVersion": "2016-03-01",
      "location": "[resourceGroup().location]",
      "properties": {
        "keyVaultId": "[resourceId(parameters('appServicePlanName'), 'Microsoft.KeyVault/vaults', variables('KeyVaultName'))]",
        "keyVaultSecretName": "[parameters('KeyVaultCertificateSecretName')]",
        "serverFarmId": "[resourceId(parameters('appServicePlanName'), 'Microsoft.Web/serverfarms', parameters('appServicePlanName'))]"
      }
    }
  ]
}
