{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appServicePlanName": {
      "type": "string"
    },
    "webAppPortalName": {
      "type": "string"
    },
    "webAppSlotName": {
      "type": "string",
      "defaultValue": "staging"
    },
    "minTlsVersion": {
      "type": "string",
      "allowedValues": [
        "1.0",
        "1.1",
        "1.2"
      ],
      "defaultValue": "1.0"
    },
    "allowedCorsOrigins": {
      "type": "array",
      "defaultValue": [
        "http://localhost",
        "https://localhost"
      ]
    },
    "httpsOnly": {
      "type": "bool",
      "defaultValue": true
    },
    "certificateName": {
      "type": "string",
      "defaultValue": "certificateName",
      "metadata": {
        "description": "Certificate name that has been imported on App Service Plan"
      }
    },
    "customHostname": {
      "type": "string",
      "defaultValue": "customHostname",
      "metadata": {
        "description": "Custom Hostname when custom domain name is used"
      }
    }
  },
  "variables": {

  },
  "resources": [
    {
      "apiVersion": "2016-08-01",
      "type": "Microsoft.Web/sites",
      "kind": "app",
      "name": "[parameters('webAppPortalName')]",
      "location": "[resourceGroup().location]",
      "comments": "This is the web app, also the default 'nameless' slot.",
      "tags": {
        "displayName": "WebApp"
      },
      "properties": {
        "serverFarmId": "[resourceId(parameters('appServicePlanName'), 'Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
        "siteConfig": {
          "minTlsVersion": "[parameters('minTlsVersion')]",
          "cors": {
            "allowedOrigins": "[parameters('allowedCorsOrigins')]"
          }
        },
        "httpsOnly": "[parameters('httpsOnly')]"
      },
      "dependsOn": [
      ]
    },
    {
      "apiVersion": "2016-08-01",
      "type": "Microsoft.Web/sites/slots",
      "name": "[concat(parameters('webAppPortalName'), '/', parameters('webAppSlotName'))]",
      "kind": "app",
      "location": "[resourceGroup().location]",
      "comments": "This specifies the web app slots.",
      "tags": {
        "displayName": "WebAppSlots"
      },
      "properties": {
        "serverFarmId": "[resourceId(parameters('appServicePlanName'), 'Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
        "siteConfig": {
          "minTlsVersion": "[parameters('minTlsVersion')]",
          "cors": {
            "allowedOrigins": "[parameters('allowedCorsOrigins')]"
          }
        },
        "httpsOnly": "[parameters('httpsOnly')]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/Sites', parameters('webAppPortalName'))]"
      ]
    },
    {
      "condition": "[not(equals(parameters('customHostname'), 'customHostname'))]",
      "type": "Microsoft.Web/sites/hostnameBindings",
      "name": "[concat(parameters('webAppPortalName'), '/', parameters('customHostname'))]",
      "apiVersion": "2016-03-01",
      "location": "[resourceGroup().location]",
      "properties": {
        "sslState": "SniEnabled",
        "thumbprint": "[reference(concat('Microsoft.Web/certificates/', parameters('certificateName')), '2018-02-01').thumbprint]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/Sites', parameters('webAppPortalName'))]"
      ]
    }


  ],
  "outputs": {
  }
}
