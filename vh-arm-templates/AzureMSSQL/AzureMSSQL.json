{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "MSSQLDBServerName": {
      "type": "string",
      "minLength": 1
    },
    "MSSQLDBName": {
      "type": "string",
      "minLength": 1
    },
    "MSSQLDBBookings": {
      "type": "string",
      "minLength": 1
    },
    "MSSQLAdminLogin": {
      "type": "string",
      "minLength": 1
    },
    "StorageType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_ZRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Premium_LRS"
      ]
    },
    "MSSQLEmailAddresses": {
      "type": "string"
    },
    "MSSQLRetentionDays": {
      "type": "int",
      "defaultValue": 2555
    },
    "MSSQLCollation": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "SQL_Latin1_General_CP1_CI_AS"
    },
    "MSSQLEdition": {
      "type": "string",
      "defaultValue": "Standard",
      "allowedValues": [
        "Basic",
        "Standard",
        "Premium"
      ]
    },
    "MSSQLRequestedServiceObjectiveName": {
      "type": "string",
      "defaultValue": "Basic",
      "allowedValues": [
        "Basic",
        "S0",
        "S1",
        "S2",
        "S3",
        "S4",
        "P1",
        "P2",
        "P3"
      ],
      "metadata": {
        "description": "Describes the performance level for Edition"
      }
    }
  },
  "variables": {
    "MSSQLAdminLoginPassword": "[concat('P', uniqueString(resourceGroup().id, '224F5A8B-51DB-46A3-A7C8-59B0DD584A41'), 'x', '!')]",
    "emailAddresses": "[parameters('MSSQLEmailAddresses')]",
    "storageAccountName": "[replace(parameters('MSSQLDBServerName'),'-', '')]"

  },
  "resources": [
    {
      "name": "[parameters('MSSQLDBServerName')]",
      "type": "Microsoft.Sql/servers",
      "location": "[resourceGroup().location]",
      "apiVersion": "2014-04-01-preview",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"

      ],
      "tags": {
        "displayName": "Virtual Courtroom SQL Server"
      },
      "properties": {
        "administratorLogin": "[parameters('MSSQLAdminLogin')]",
        "administratorLoginPassword": "[variables('MSSQLAdminLoginPassword')]"
      },
      "resources": [
        {
          "name": "AllowAllWindowsAzureIps",
          "type": "firewallrules",
          "location": "[resourceGroup().location]",
          "apiVersion": "2014-04-01-preview",
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers', parameters('MSSQLDBServerName'))]"
          ],
          "properties": {
            "startIpAddress": "0.0.0.0",
            "endIpAddress": "0.0.0.0"
          }
        },
        {
          "name": "AuditingSettings",
          "apiVersion": "2015-05-01-preview",
          "location": "[resourceGroup().location]",
          "type": "auditingSettings",
          "dependsOn": [
            "[concat('Microsoft.Sql/servers/', parameters('MSSQLDBServerName'))]",
            "[concat('Microsoft.Sql/servers/', parameters('MSSQLDBServerName'), '/databases/',parameters('MSSQLDBName'))]"
          ],
          "properties": {
            "state": "Enabled",
            "storageEndpoint": "[concat('https://', variables ('storageAccountName'), '.blob.core.windows.net/')]",
            "storageAccountAccessKey": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), providers('Microsoft.Storage', 'storageAccounts').apiVersions[0]).keys[0].value]",
            "storageAccountSubscriptionId": "[subscription().subscriptionId]",
            "isStorageSecondaryKeyInUse": false,
            "auditActionsAndGroups": null,
            "retentionDays": "[parameters('MSSQLRetentionDays')]"
          }
        },
        {
          "apiVersion": "2015-05-01-preview",
          "type": "securityAlertPolicies",
          "name": "DefaultThreatPolicy",
          "dependsOn": [
            "[concat('Microsoft.Sql/servers/', parameters('MSSQLDBServerName'))]",
            "[concat('Microsoft.Sql/servers/', parameters('MSSQLDBServerName'), '/databases/',parameters('MSSQLDBName'))]",
            "[concat('Microsoft.Sql/servers/', parameters('MSSQLDBServerName'), '/auditingSettings/AuditingSettings')]"
          ],
          "properties": {
            "state": "Enabled",
            "disabledAlerts": "",
            "emailAddresses": "[variables('emailAddresses')]",
            "emailAccountAdmins": "Enabled",
            "retentionDays": "[parameters('MSSQLRetentionDays')]",
            "storageEndpoint": "[concat('https://', variables ('storageAccountName'), '.blob.core.windows.net/')]",
            "storageAccountAccessKey": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), providers('Microsoft.Storage', 'storageAccounts').apiVersions[0]).keys[0].value]"
          }
        },
        {
          "name": "[parameters('MSSQLDBName')]",
          "type": "databases",
          "location": "[resourceGroup().location]",
          "apiVersion": "2014-04-01-preview",
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers', parameters('MSSQLDBServerName'))]"
          ],
          "tags": {
            "displayName": "Database"
          },
          "properties": {
            "collation": "[parameters('MSSQLCollation')]",
            "edition": "[parameters('MSSQLEdition')]",
            "maxSizeBytes": "1073741824",
            "requestedServiceObjectiveName": "[parameters('MSSQLRequestedServiceObjectiveName')]"
          }
        },
        {
          "name": "[parameters('MSSQLDBBookings')]",
          "type": "databases",
          "location": "[resourceGroup().location]",
          "apiVersion": "2014-04-01-preview",
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers', parameters('MSSQLDBServerName'))]"
          ],
          "tags": {
            "displayName": "Database"
          },
          "properties": {
            "collation": "[parameters('MSSQLCollation')]",
            "edition": "[parameters('MSSQLEdition')]",
            "maxSizeBytes": "1073741824",
            "requestedServiceObjectiveName": "[parameters('MSSQLRequestedServiceObjectiveName')]"
          }
        }

      ]
    },
    {
      "name": "[variables('storageAccountName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-01-01",
      "sku": {
        "name": "[parameters('StorageType')]"
      },
      "dependsOn": [],
      "tags": {
        "displayName": "SQL Diagnostics"
      },
      "kind": "Storage"
    }
  ],
  "outputs": {
    "DatabaseConnectionString": {
      "value": "[concat('Server=tcp:',reference(parameters('MSSQLDBServerName')).fullyQualifiedDomainName,',1433;Initial Catalog=',parameters('MSSQLDBName'),';Persist Security Info=False;User ID=',reference(parameters('MSSQLDBServerName')).administratorLogin,';Password=',variables('MSSQLAdminLoginPassword'),';MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;')]",
      "type": "string"
    },
    "VhBookingsDatabaseConnectionString": {
      "value": "[concat('Server=tcp:',reference(parameters('MSSQLDBServerName')).fullyQualifiedDomainName,',1433;Initial Catalog=',parameters('MSSQLDBBookings'),';Persist Security Info=False;User ID=',reference(parameters('MSSQLDBServerName')).administratorLogin,';Password=',variables('MSSQLAdminLoginPassword'),';MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;')]",
      "type": "string"
    },
    "MSSQLAdminLoginPassword": {
      "value": "[variables('MSSQLAdminLoginPassword')]",
      "type": "string"
    }
  }
}
